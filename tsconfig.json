{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist/",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
}